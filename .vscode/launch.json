{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Playwright Tests",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/@playwright/test/bin/playwright-test",
        "args": [
          "--project=chromium",
          "--config=playwright.config.ts",
          "${workspaceFolder}/tests"
        ],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "env": {
          "DEBUG": "pw:api,pw:protocol"
        }
      }
    ]
  }
  